<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
  	<%= @book.errors.count %> error prohibited this obj from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render 'books/list', user: current_user  %>
<div class="col-xs-9">
<h2>Books</h2>
<table class="table">
  <thead>
  	<tr>
      <th></th>
  		<th>Title</th>
  		<th>Opinion</th>
  		<th colspan="3"></th>
  	</tr>
  </thead>
  <tbody>

    <% @post_book.each do |book| %>
     <tr>
     	<td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, class: "profile-thumb", fallback: "no_image.jpg" %></td>
    	<td><%=link_to book.title, book_path(book.id) %></td>
    	<td><%= book.body %></td>
     </tr>
    <% end %>
  </tbody>
</table>
</div>
<% if flash[:notice] %>
     <div class="flash">
       <%= flash[:notice] %>
     </div>
   <% end %>

<%= render 'books/list', user: @post_book.user  %>
<div class="col-xs-9">
<h2>Book detail</h2>
<table class="table">
<tbody>
<tr>
	<td style="width: 60px"><%= attachment_image_tag @post_book.user, :profile_image, :fill, 60, 60, class: "profile-thumb", fallback: "no_image.jpg" %><%=link_to @post_book.user.name, user_path(@post_book.user.id) %></td>
	<td><%= @post_book.title %></td>
	<td><%= @post_book.body %></td>

	<% if @post_book.id == current_user.id %>
	<td><%= link_to "Edit", edit_book_path(@post_book),class: "btn btn-success" %></td>
	<td><%= link_to "Destroy", book_path(@post_book), class: "btn btn-danger" , method: :delete, "data-confirm" => "本当に消しますか？" %></td>
	<% end %>

</tr>
</tbody>
</table>
</div>


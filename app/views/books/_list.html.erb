
<div class="col-xs-3">
<h2>Use info</h2>
<div class="profile-container">
	<%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "profile-thumb", fallback: "no_image.jpg" %>
 <table class="table table-striped">
  <tr>
  	<th>Name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
  	<th>Introduction</th>
	<th><%= user.introduction %></th>
  </tr>
 </table>

	<div class="row">
	<%= link_to "", edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
  	
   </div>

<h2>New Book</h2>
<%= form_for(Book.new) do |f| %>
  <div class="row">
	<h4>Title</h4>
	<%= f.text_field :title , class: "col-xs-12" %>

	<h4>Opinion</h4>
	<%= f.text_area :body , class: "col-xs-12" %><br>

	<%= f.submit'Create Book',class: "create-book col-xs-12 btn btn-primary" %>
   </div>
<% end %>

		</div>
</div>

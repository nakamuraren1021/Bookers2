<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

<%= render 'books/list', user: @user  %>
<div class="col-xs-9">
<h2>Books</h2>
<table class="table table-stripe">
   <tr>
   	<td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "profile-thumb", fallback: "no_image.jpg" %></td>
	<td class="u-s-title">Title</td>
	<td  class="u-s-opi">Opinion</td>
   </tr>

<% @user.books.each do |book| %>
	 <tr>
	 	<td></td>
		<td><%=link_to book.title, book_path(book.id) %></td>
		<td><%= book.body %></td>
	 </tr>
<% end %>
</table>
</div>

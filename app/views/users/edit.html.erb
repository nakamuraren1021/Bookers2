<% if @user.errors.any? %>
  <div class="alert alert-warning">
  	<%= @user.errors.count %> error prohibited this obj from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2>User Info</h2>
<%= form_for(@user) do |f| %>
	<label class="control-label" for="inputName">Name</label>
	<%= f.text_field :name,autofocus:true,id:"inputName" %>

	<div class="user-edit-image"></div>

	<label class="control-label" for="inputImage">Image</label>
	<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>

	<label class="control-label" for ="inputIntro">Introduction</label>
	<%= f.text_area :introduction,autofocus:true, class: "",id:"inputIntro" %><br>
    <%= f.submit "Update User", class:"btn btn-default" %>
 <% end %>


